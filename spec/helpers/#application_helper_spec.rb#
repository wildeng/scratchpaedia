require 'rails_helper'
describe ApplicationHelper do
  context 'when flash message' do
    def perform(flash_type)
      bootstrap_class_for(flash_type)
    end
    
    it 'gets success class' do
      expect(perform('success').to eq('alert-success')
    end
             
             it 'gets alert class' do
               
    it 'gets notice class'
    it 'gets error class'
    it 'gets a flash message'
    it 'gets nil if nothing passed'
  end

  context 'when markdown' do
    it 'gets parsed message'
    it 'gets plain text with no markdown'
  end
end
